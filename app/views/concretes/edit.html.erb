<!-- Your form goes here! -->
<%= form_tag("/concretes/#{@concrete.id}", method: :patch) do %>
  <%= label_tag('concrete[mix_type]', "Mix Type") %>
  <%= text_field(:concrete, :mix_type) %>


  <%= label_tag('concrete[psi]', "PSI") %>
  <%= text_field(:concrete, :psi) %>

  <%= label_tag('concrete[color]', "Color") %>
  <%= text_field(:concrete, :color) %>

  <%= label_tag('concrete[cost_per_yard]', "Cost Per Yard") %>
  <%= text_field(:concrete, :cost_per_yard) %>

  <%= text_field_tag('id', @concrete.id) %>

  <%= submit_tag "Update Concrete" %>
<% end %>
